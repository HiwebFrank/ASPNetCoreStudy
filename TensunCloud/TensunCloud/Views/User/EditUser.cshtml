@model EditUserViewModel
@using TensunCloud.Models;

@{
    ViewData["Title"] = "编辑用户";
}

<h2>编辑用户</h2>
<form asp-action="EditUser" >
    <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="Name" class="col-lg-3 col-sm-3 control-label">账户名：</label>
                <div class="col-lg-6">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-lg-3 col-sm-3 control-label">Email：</label>
                <div class="col-lg-6">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TSClaims" class="col-lg-3 col-sm-3 control-label">权限：</label>
                <div class="col-lg-9">
                    @for (int i = 0; i < Model.TSClaims.Count; i++)
                    {
                        <div class="col-lg-4">
                            <input type="checkbox" asp-for="@Model.TSClaims[i].Selected" />
                            <label asp-for="@Model.TSClaims[i].Selected">@Model.TSClaims[i].Text</label>
                            <input type="hidden" asp-for="@Model.TSClaims[i].Value" />
                            <input type="hidden" asp-for="@Model.TSClaims[i].Text" />
                        </div>
                    }
                </div>
            </div>
        <div class="form-group">
            <div class="col-lg-offset-3 col-md-10">
                <input type="submit" value="保 存" class="btn btn-default" />
            </div>
        </div>

    </div>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}